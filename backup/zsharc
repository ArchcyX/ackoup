_cp() {
    mkdir "$1" && cd "$1" && \
    mkdir src includes && \
    touch Makefile main.c && \
    echo "$banner" > TODO_list && \
	echo -e "$YELLOW Creating the Project.. $RED => '$1' <= $RESET" && \
	echo -e " $GREEN built compiled 👿 \n $RESET" && \
}

# cp fonksiyonunun alias'ını bu şekilde oluşturuyoruz.
alias cp='_cp'
alias intra_repo='/home/alermi/my_scripts/git_switcher.sh intra_repo'
alias my_repo='/home/alermi/my_scripts/git_switcher.sh my_repo'

